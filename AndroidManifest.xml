<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ac.uk.swansea.thirdyear"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera" android:required="true"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ac.uk.swansea.thirdyear.MainMenu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ac.uk.swansea.thirdyear.About"
            android:label="@string/title_activity_about"
            android:parentActivityName="ac.uk.swansea.thirdyear.MainMenu" >
        </activity>
        <activity
            android:name="ac.uk.swansea.thirdyear.StartCamera"
            android:label="@string/title_activity_incorporate_camera" >
        </activity>
        <activity
            android:name="ac.uk.swansea.thirdyear.MainImageDisplay"
            android:label="@string/title_activity_open_gallery" 
            android:parentActivityName="ac.uk.swansea.thirdyear.MainMenu"
            android:uiOptions="splitActionBarWhenNarrow">
        </activity>
        <activity
            android:name="ac.uk.swansea.thirdyear.ActivityGrayScale"
            android:label="@string/title_activity_grayscale" 
            android:uiOptions="splitActionBarWhenNarrow">
        </activity>
        <activity
            android:name="ac.uk.swansea.thirdyear.ActivitySmooth"
            android:label="@string/title_activity_smooth" 
            android:uiOptions="splitActionBarWhenNarrow">
        </activity>
        <activity
            android:name="ac.uk.swansea.thirdyear.ActivitySharpen"
            android:label="@string/title_activity_sharpen" 
            android:uiOptions="splitActionBarWhenNarrow">
        </activity>
        <activity
            android:name="ac.uk.swansea.thirdyear.ActivityEdgeDetect"
            android:label="@string/title_activity_edges" 
            android:uiOptions="splitActionBarWhenNarrow">
        </activity>
        <activity
            android:name="ac.uk.swansea.thirdyear.ActivityColorHistogram"
            android:label="@string/title_activity_histogram" 
            android:parentActivityName="ac.uk.swansea.thirdyear.MainImageDisplay"> 
        </activity>
        <activity
            android:name="ac.uk.swansea.thirdyear.ActivityHistogram"
            android:label="@string/title_activity_histogram" 
            android:parentActivityName="ac.uk.swansea.thirdyear.MainImageDisplay"
            android:uiOptions="splitActionBarWhenNarrow">
        </activity>
        <activity
            android:name="ac.uk.swansea.thirdyear.ActivityEnhanceContrast"
            android:label="@string/title_activity_contrast" 
            android:uiOptions="splitActionBarWhenNarrow">
        </activity>
        <activity
            android:name="ac.uk.swansea.thirdyear.ActivityEqualizeHistogram"
            android:label="@string/title_activity_equalize" 
            android:uiOptions="splitActionBarWhenNarrow">
        </activity>
        <activity
            android:name="ac.uk.swansea.thirdyear.ActivityToBinary"
            android:label="@string/title_activity_binary" 
            android:uiOptions="splitActionBarWhenNarrow">
        </activity>
        <activity
            android:name="ac.uk.swansea.thirdyear.ActivityEmboss"
            android:label="@string/title_activity_emboss" 
            android:uiOptions="splitActionBarWhenNarrow">
        </activity>
        
        
    </application>

</manifest>
